

<!-- Recent Posts -->
<div class="sidebar-widget">
    <h4>@MovieArchiveTemplate.Resource.lang.ÇıkacakFilmler</h4>
    <ul class="latest-blog-list">
        @foreach (var item in Model.FutureMovies)
        {
            <li>
                <br />
                <span>@item.ReleaseDate.Day</span>
                <small>@item.ReleaseDate.ToString("MMM")</small>
                <small>@item.ReleaseDate.Year</small>
                <small class="latest-blog-list-comments"><i class="fa fa-star-o">@item.Raiting</i></small>
                <p>
                    <a href="@Url.Action("MovieDetails", "Movies", new { movieID = @item.MovieID })">
                        @if (item.Poster != null)
                        {
                            <img src="data:image/jpg;base64, @Convert.ToBase64String(item.Poster)" width="260" height="150">
                        }
                        else
                        {
                            <img src="~/Content/img/noimage.png" width="260" height="150">
                        }

                        <br /><small style="color: #fb0000">@item.Title</small>
                    </a>
                </p>
            </li>
        }
    </ul>
</div>

