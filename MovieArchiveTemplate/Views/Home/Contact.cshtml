@model MovieArchiveTemplate.Models.ViewModels.NContactModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section additionalJs {
    @if (ViewBag.Success != null && ViewBag.Success)
    {
        <div id="wrapper">
            <div id="message-sent">
                <div id="close-button">
                    <span>X</span>
                </div>
                <span>Mesajınız başarıyla gönderilmiştir.</span>
            </div>
        </div>
    }

    <script>
        $('#wrapper').click(function () {
            $(this).fadeOut('slow');
        });
    </script>
}


<!-- Blog Section -->
<section id="blog">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 wp2 delay-05s">
                <div class="sidebar-widget content_top">
                    <h4 style="font-size: 38px; font-weight: 500">İlETŞİM</h4>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Google Maps -->
            <div class="col-lg-7 wp2 delay-05s">
                <h2>@MovieArchiveTemplate.Resource.lang.Neredeyiz</h2>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3021.267770147381!2d30.400535200000004!3d40.778127!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x409df633dbfb5ae7%3A0x9dab4f3c21ca722a!2sAdapazar%C4%B1%2C+34398+Sakarya%2C+T%C3%BCrkiye!5e0!3m2!1str!2s!4v1430773760348" width="600" height="450" frameborder="0" style="border:0"></iframe>
            </div><!-- /.col-lg-7 -->

            <!-- Contant -->
            <div class="col-lg-5 wp2 delay-05s">
                <h2>@MovieArchiveTemplate.Resource.lang.İletişim</h2>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-section", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        
                        <div class="row" style="margin: 3%">
                            <div class="col-md-12">
                                @Html.ValidationSummary()
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                @Html.Label(MovieArchiveTemplate.Resource.lang.Ad):
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-md-4">
                                @Html.Label(@MovieArchiveTemplate.Resource.lang.EMail):
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.EMail, new { @class = "form-control" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-md-4">
                                @Html.Label(@MovieArchiveTemplate.Resource.lang.Telefon):
                            </div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control" })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-md-4">
                                @Html.Label(@MovieArchiveTemplate.Resource.lang.Mesaj):
                            </div>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control" })
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" value="@MovieArchiveTemplate.Resource.lang.Gönder" class="btn" style="float: right; margin-right: 13%" />
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>
                }
            </div><!-- /.col-lg-6 -->

        </div><!-- /.row -->

    </div><!-- /.container -->
</section><!-- /#blog --> 